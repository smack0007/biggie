struct Person {
  name: string;
  age: int;
}

func sayHello(person: Person): void {
  println("Hello %s, you are %d years old!", person.name, person.age);
}

func main(): int {  
  var person: Person = { "Buddy", 42 };
  sayHello(person);

  var data: []int = [ 1, 2, 3, 4 ];
  var ptr: *int = &data[1];
  println("%d", *ptr);

  return 0;
}
