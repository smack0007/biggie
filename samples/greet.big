import personLib "./person.big"

export enum GreetType {
  Formal = 1,
  Informal,
  Crazy
}

export func sayHello(person: personLib.Person, type: GreetType): void {
  if (type == GreetType.Formal) {
    println("Hello %s, you are %d years old!", person.name, person.age);
  } else if (type == GreetType.Informal) {
    println("Howdy %s, you are %d years old!", person.name, person.age);
  } else {
    println("Strap in %s, you are %d years old!", person.name, person.age);
  }
}
