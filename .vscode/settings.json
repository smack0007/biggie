{
  "deno.enable": true,
  "deno.lint": true,
  "deno.unstable": false,

  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "prettier.printWidth": 120,
  "prettier.tabWidth": 2,

  "files.associations": {
    // Just treat the files as go for now to get syntax highlighting
    "*.big": "go"
  },

  "files.exclude": {
    "**/.git": true
  },

  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  }
}
